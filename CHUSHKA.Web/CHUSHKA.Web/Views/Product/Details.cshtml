@model CHUSHKA.Web.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@Model.Name</h1>
<hr class="hr-2 bg-dark" />
<div class="product-type-holder half-width mx-auto d-flex justify-content-between">
    <h3 class="text-center">Type: @Model.Type.ToString()</h3>
    <h3 class="text-center">Price: @Model.PriceString</h3>
</div>
<hr class="hr-2 bg-dark" />
<h3 class="text-center">Description</h3>
<div class="product-description-holder">
    <p class="text-center mt-4">
        @Model.Description
    </p>
</div>
<hr class="hr-2 bg-dark" />
<h3 class="text-center">Actions</h3>
<div class="product-action-holder mt-4 half-width mx-auto d-flex justify-content-around">
    <a class="btn chushka-bg-color" asp-controller="Orders" asp-action="Create" asp-route-id="@Model.Id">Order</a>
    @if (User.IsInRole("Administrator"))
    {
        <a class="btn chushka-bg-color" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn chushka-bg-color" asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    }
</div>