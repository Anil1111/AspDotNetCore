@model Eventures.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Register</h1>
<form class="mx-auto half-width" method="post" asp-controller="Account" asp-action="Register">
    <div class="container">
        <div asp-validation-summary="ModelOnly"></div>
        <hr class="chushka-bg-color" />
        <div class="row text-center">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" placeholder="Username...">
                    <span asp-validation-for="Username"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email...">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
        </div>
        <hr class="chushka-bg-color" />
        <div class="row text-center">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Password...">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password...">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        </div>
        <hr class="chushka-bg-color" />
        <div class="row text-center">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="First Name...">
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Last Name...">
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-lg-12">
                <div class="form-group">
                    <label asp-for="UniqueCitizenNumber"></label>
                    <input asp-for="UniqueCitizenNumber" class="form-control" placeholder="Unique Citizen Number...">
                    <span asp-validation-for="UniqueCitizenNumber"></span>
                </div>
            </div>
        </div>
        <hr class="chushka-bg-color"/>
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Register </button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}