<h1 class="text-center">Create Event</h1>
<form class="mx-auto half-width" method="post" asp-action="Create">
    <div class="container">
        <div asp-validation-summary="ModelOnly"></div>
        <hr class="chushka-bg-color" />
        <div class="row text-center">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name...">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Place"></label>
                    <input asp-for="Place" class="form-control" placeholder="Place...">
                    <span asp-validation-for="Place"></span>
                </div>
            </div>
        </div>
        <hr class="chushka-bg-color" />
        <div class="row text-center">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Start"></label>
                    <input asp-for="Start" class="form-control" placeholder="Start...">
                    <span asp-validation-for="Start"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="End"></label>
                    <input asp-for="End" class="form-control" placeholder="End...">
                    <span asp-validation-for="End"></span>
                </div>
            </div>
        </div>
        <hr class="chushka-bg-color" />
        <div class="row text-center">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="TotalTickets"></label>
                    <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets...">
                    <span asp-validation-for="TotalTickets"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="TicketPrice"></label>
                    <input asp-for="TicketPrice" class="form-control" placeholder="Ticket Price...">
                    <span asp-validation-for="TicketPrice"></span>
                </div>
            </div>
        </div>
        <hr class="chushka-bg-color" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Create  Event</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}